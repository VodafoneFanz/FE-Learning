    <!-- 
        可以将js代码写入scrpit标签
        <script>
        alert("What r u doing!?");
    </script>
    -->

    <!--
        js代码也通过script引入，引入为.js文件
        但是一旦有外部文件就不能在里面写代码了
        必须重新创建一个script
    -->
    <script type="text/javascript" src="JS.js"></script>
